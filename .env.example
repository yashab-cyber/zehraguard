# Environment variables for ZehraGuard InsightX
# Copy this file to .env and update with your values

# Application
APP_NAME="ZehraGuard InsightX"
VERSION="1.0.0"
DEBUG=false
ENVIRONMENT="production"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
POSTGRES_HOST="postgres"
POSTGRES_PORT=5432
POSTGRES_DB="zehraguard"
POSTGRES_USER="zehraguard"
POSTGRES_PASSWORD="secure_password_123"

# Redis Configuration  
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_PASSWORD="redis_password_123"
REDIS_DB=0

# InfluxDB Configuration
INFLUXDB_URL="http://influxdb:8086"
INFLUXDB_TOKEN="zehraguard-super-secret-auth-token"
INFLUXDB_ORG="zehraguard"
INFLUXDB_BUCKET="behavioral_data"

# RabbitMQ Configuration
RABBITMQ_HOST="rabbitmq"
RABBITMQ_PORT=5672
RABBITMQ_USER="zehraguard"  
RABBITMQ_PASSWORD="rabbitmq_password_123"

# ML Configuration
ML_MODEL_PATH="/app/models"
ML_TRAINING_DATA_PATH="/app/data"
ANOMALY_THRESHOLD=0.8
RISK_SCORE_THRESHOLD=0.7

# Alert Configuration
ALERT_COOLDOWN_MINUTES=15
MAX_ALERTS_PER_USER_PER_HOUR=10

# SIEM Integration
SPLUNK_HOST=""
SPLUNK_PORT=8088
SPLUNK_TOKEN=""

AZURE_SENTINEL_WORKSPACE_ID=""
AZURE_SENTINEL_SHARED_KEY=""

# Compliance & Privacy
DATA_RETENTION_DAYS=90
ENCRYPTION_KEY=""
GDPR_COMPLIANCE=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
